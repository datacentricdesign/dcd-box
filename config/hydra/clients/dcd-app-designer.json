{
  "client_id": "${APP_DESIGNER_CLIENT_ID}",
  "client_name": "DCD - Designer",
  "description": "Designer web portal of the Data-Centric Design hub.",
  "client_secret": "${APP_DESIGNER_CLIENT_SECRET}",
  "logo_uri": "${PROTOCOL}://${HOST}:${PORT}/auth/img/logo/android-icon-192x192.png",
  "scope": "openid offline profile dcd:public dcd:things dcd:persons",
  "grant_types": ["client_credentials", "refresh_token", "authorization_code"],
  "response_types": ["token", "refresh_token", "code"],
  "redirect_uris": [
    "${PROTOCOL}://${HOST}:${PORT}/designer/auth/callback",
    "http://localhost:8080/designer/auth/callback"
  ],
  "token_endpoint_auth_method": "client_secret_post"
}
