{
  "client_id": "${APP_SUBJECT_CLIENT_ID}",
  "name": "DCD - Data Subject",
  "description": "The HTTP API of the Data-Centric Design hub.",
  "client_secret": "${APP_SUBJECT_CLIENT_SECRET}",
  "scope": "openid,offline,profile,dcd:public,dcd:things,dcd:persons",
  "grant_types": ["client_credentials", "refresh_token"],
  "response_types": ["token", "refresh_token"],
  "redirect_uris": [
    "${PROTOCOL}://${HOST}:${PORT}/subject/auth/callback",
  ],
  "token_endpoint_auth_method": "client_secret_post"
}
